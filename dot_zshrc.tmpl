# Set up PATH
if [ "$PATH" = "" ]; then
  export PATH="/bin"
fi

add_to_path() {
  if ! [[ "$PATH" =~ "$1" ]]; then
    export PATH="$1:$PATH"
  fi
}

add_to_path "/usr/bin"
add_to_path "/usr/local/bin"
add_to_path "/usr/local/go/bin"
add_to_path "$HOME/.local/bin"
add_to_path "$HOME/.local/share/gem/ruby/3.3.0/bin"
add_to_path "$HOME/.local/share/pnpm"
add_to_path "$HOME/bin"
add_to_path "$HOME/go/bin"
add_to_path "$HOME/.cargo/bin"
add_to_path "$HOME/.local/share/uv/python"
add_to_path "$HOME/.fly/bin"

export PNPM_HOME="$HOME/.local/share/pnpm"
export FLYCTL_INSTALL="$HOME/.fly"
export EDITOR="nvim"

nvim() {
  local cwd_file="$HOME/.local/state/nvim/cwd"

  # Cleanup
  mkdir -p "$(dirname "$cwd_file")"
  [[ -f "$cwd_file" ]] && rm "$cwd_file"

  command nvim "$@"

  if [[ -f "$cwd_file" ]]; then
    local session_dir=$(cat "$cwd_file")
    if [[ -d "$session_dir" && "$session_dir" != "$PWD" ]]; then
      echo "Changing to session directory: $session_dir"
      cd "$session_dir"
    fi
    rm "$cwd_file"
  fi
}

